#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> w(n);
    
    for (int i = 0; i < n; i++) {
        cin >> w[i];
    }
    
    sort(w.begin(), w.end());
    
    int containers = 0;
    int i = 0;
    
    while (i < n) {
        containers++;
        int limit = w[i] + 4;  // This container can cover up to weight w[i] + 4
        
        // Move to the next toy that cannot fit in the current container
        while (i < n && w[i] <= limit) {
            i++;
        }
    }
    
    cout << containers << endl;
    return 0;
}
