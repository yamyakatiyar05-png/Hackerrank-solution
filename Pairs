#include <bits/stdc++.h>
using namespace std;

int pairs(int k, vector<int> arr) {
    unordered_set<int> nums(arr.begin(), arr.end());
    int count = 0;

    for (int x : arr) {
        if (nums.find(x + k) != nums.end()) {
            count++;
        }
    }

    return count;
}

int main() {
    int n, k;
    cin >> n >> k;
    vector<int> arr(n);
    
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << pairs(k, arr) << endl;
    return 0;
}
